{
  "name": "serverless-vercel-api",
  "version": "1.0.0",
  "description": "Serverless API Template, for Vercel hosting.",
  "main": "api/index.ts",
  "repository": "git@github.com:robiiinos/serverless-vercel-api.git",
  "author": "robiiinos",
  "license": "MIT",
  "scripts": {
    "format:check": "prettier --check '**/*.{js,ts,json,yaml,yml,md}'",
    "format:write": "prettier --write '**/*.{js,ts,json,yaml,yml,md}'",
    "lint": "eslint 'api/**/*.{js,ts}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format:write",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@vercel/node": "^2.6.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^4.3.0",
    "prettier": "^2.7.0",
    "typescript": "^4.7.0"
  },
  "engines": {
    "node": "18.x"
  }
}
